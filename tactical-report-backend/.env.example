
# Server Configuration
SERVER_PORT=8080

# MongoDB Configuration
# Development: Use localhost with dev database
# Production: Use your production MongoDB server or MongoDB Atlas URI

# Local MongoDB (Development)
MONGODB_URI=mongodb://localhost:27017/tactical-report-dev
MONGODB_DATABASE=tactical-report-dev

# MongoDB Atlas (Cloud - Production Example)
# MONGODB_URI=mongodb+srv://username:password@cluster0.mongodb.net/tactical-report
# MONGODB_DATABASE=tactical-report

# Docker MongoDB (if using docker-compose)
# MONGODB_URI=mongodb://mongo:27017/tactical-report
# MONGODB_DATABASE=tactical-report

# MongoDB Authentication (optional - only if your MongoDB requires it)
# MONGODB_USERNAME=your-username
# MONGODB_PASSWORD=your-password

